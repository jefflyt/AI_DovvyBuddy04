# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Embedding Provider (gemini | groq)
EMBEDDING_PROVIDER=gemini

# LLM Provider (groq | gemini)
LLM_PROVIDER=groq

# Groq API (dev environment)
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API (production target)
GEMINI_API_KEY=your_gemini_api_key_here

# Database (Postgres with pgvector)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# Embedding Provider (gemini recommended)
EMBEDDING_PROVIDER=gemini

# Session configuration
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_LIFETIME_HOURS=24

# Lead delivery
# Webhook URL for lead notifications (optional)
LEAD_WEBHOOK_URL=

# Email configuration for lead delivery (optional, for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@dovvybuddy.com

# Analytics (optional, for future use)
GOOGLE_ANALYTICS_ID=

# Feature flags
ENABLE_TELEGRAM=false
